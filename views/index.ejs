    <div class="container" style="flex: 1;">
        <div class="row" id="recipe-cards">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="col-md-4">
                        <div class="card mb-4" onclick="location.href='/'">
                            <img src="<%= post.image ? post.image : 'https://via.placeholder.com/300' %>" class="card-img-top" alt="<%= post.title %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= post.title.length > 10 ? post.title.substring(0, 10) + ' ...' : post.title %>
                                </h5>
                                <p class="card-text">
                                    <%= post.content.length > 25 ? post.content.substring(0, 25) + ' ...' : post.content %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-body-secondary">레시피를 추가해 주세요.</p>
            <% } %>
        </div>
    </div>
    <div class="backimg"></div>

