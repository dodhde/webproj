<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <link href="https://i.ibb.co/WPZtpj8/icon.png" rel="icon" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        html, body {
            height: auto;
            min-height: 100%;
        }
        body {
            background-color: #fff8e4;

            display: flex;
            flex-direction: column;

            padding-top: 20px;
            padding-bottom: 200px;
        }
        .backimg {
            background-image: url(https://i.ibb.co/3RC981V/FHD-background-imagex.png);
            background-repeat: repeat-x;
            background-position: bottom;
            height: 500px;
            width: 100%;
        }
        .deletepost {
            width: 300px;
            margin-left: 10px; 
        }
        .backdel {
            float: right;
            display: flex;
            align-items: center;
            margin-top: 20px;
        }
        #recom {
            margin-top: 10px;
            width: 100px; 
            height: 60px;
            margin-left: auto;
            margin-right: auto;
        }
        #recomcount {
            font-size: 16px;
            font-family: sans-serif;
            font-weight: bold;
        }
        #recombtn {
            padding-top: 20px;
            display: flex;
            justify-content: center;
            height: 100%;
        }
    </style>
</head>
<body>

    <%-include('header.ejs')%>

    

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>
                    <%= post.category === '0' ? '🍚' : 
                        post.category === '1' ? '🥢' : 
                        post.category === '2' ? '🍣' : 
                        post.category === '3' ? '🍝' : '🍱' %> 
                    <%= post.title %>
                </h3>
            </div>
            <div class="card-body">
                <p class="card-text">작성자: <strong><%= post.name %></strong>
                    <small class="text-muted" style="float: right;"><%= post.regdate %></small></p>
                <p class="card-text">필요 재료: <%= post.ingredients %></p><hr>
                <div><br>
                    <p><% if (post.imgpath) { %>
                        <img src="/<%= post.imgpath %>" alt="Post Image" style="max-width: 25%;">
                      <% } %></p>
                    <p class="card-text"><%- post.content.replace(/\n/g, '<br>') %></p><br></div>
            </div>
        </div>
        <div id="recom" class="card">
            <div id="recombtn">
                <img src="https://cdn-icons-png.flaticon.com/512/833/833472.png" alt="recom" style="width: 25px;
                height: 25px; margin-right: 10px;">|
                <span id="recomcount" style="margin-left: 10px;">0</span>
            </div>
        </div>
        <div class="backdel">
            <a href="/" class="btn" style="background-color: #FFDAB9;">목록으로 돌아가기</a>
            <div class="deletepost">
                <form action="/posts/delete/<%= post.id %>" method="POST">
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="비밀번호" width="50px">
                        <button type="submit" class="btn " style="background-color: #FFDAB9;">삭제</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="backimg"></div>
    

    <%-include('footer.ejs')%>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const postId = 'unique-post-id'; 
    
        document.addEventListener('DOMContentLoaded', function() {
            const recomCountElement = document.getElementById('recomcount');
            const storedRecomCount = localStorage.getItem(`${postId}-count`);
    
            if (storedRecomCount !== null) {
                recomCountElement.textContent = storedRecomCount;
            }
        });
    
        document.getElementById('recombtn').addEventListener('click', function() {
            const recomCountElement = document.getElementById('recomcount');
    
            const alreadyRecommended = localStorage.getItem(postId) === 'true';
    
            let recomCount = parseInt(recomCountElement.textContent, 10);
    
            if (alreadyRecommended) {
                if (recomCount > 0) {
                    recomCount--;
                    localStorage.setItem(postId, 'false');
                    alert('추천을 취소하셨습니다.');
                } else {
                    alert('추천 수는 0보다 작을 수 없습니다.');
                }
            } else {
                recomCount++;
                localStorage.setItem(postId, 'true');
                alert('추천하셨습니다.');
            }
    
            recomCountElement.textContent = recomCount;
            localStorage.setItem(`${postId}-count`, recomCount);
        });
    
        document.getElementById('resetbtn').addEventListener('click', function() {
            const recomCountElement = document.getElementById('recomcount');
            
            recomCountElement.textContent = '0';
            localStorage.setItem(postId, 'false');
            localStorage.setItem(`${postId}-count`, '0');
            
            alert('추천 수가 리셋되었습니다.');
        });
    </script>
    

</body>
</html>
